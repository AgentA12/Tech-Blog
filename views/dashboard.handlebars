{{#if loggedIn}}
<ul id="dashboard-post-ul">
  {{#each dbUserData}}
 
  <li>
    <a href="/dashboard/edit/{{'posts.id'}}" class="user-post-container" id="user-post-list" data-post-id="{{'posts.id'}}" >
    {{!-- <div class="user-post-container" id="user-post-list" data-post-id="{{'posts.id'}}"> --}}
      <h3 id="dashboard-post-title">{{'posts.post_title'}}</h3>
      <p>{{createdAt}}</p>
    {{!-- </div> --}}
    </a>
  </li>
 
  {{/each}}
</ul>
<div class="post-btn-container">
  <div class="">
    <div class="add"></div><button class="add-post-btn" id="add-post">Add post!</button>
  </div>
</div>
{{else}}
{{> loginForm}}
{{/if}}

<div class="post-container" id="create-post-toggler">
  <div class="post-title">
    <h3>Create New Post</h3>
  </div>
  <div class="post-body">
    <form action="" id="create-form">
      <label for="create-post-title">Title</label>
      <input type="text" name="post-title" id="create-post-title" />
      <label for="create-post-body">Content</label>
      <input type="text" name="post-content" id="create-post-body" />
     <button>Create</button>
    </form>
  </div>
</div>

{{#if loggedIn}}
<script src="/javascript/createpost.js"></script>
{{/if}}